{
  "hosting": [
    {
      "target": "relivemarket",
      "public": "public",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        { 
          "source": "/app/**", 
          "destination": "/app/index.html" 
        },
        {
          "source": "/",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "relivemarket-dev",
      "public": "apps/dev",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "/app/**",
          "destination": "/app/index.html"
        },
        {
          "source": "/",
          "destination": "/app/index.html"
        }
      ]
    },
    {
      "target": "relivemarket-redirect",
      "redirects": [
        {
          "source": "/**",
          "destination": "https://relive.market",
          "type": 301
        }
      ]
    }
  ]
}
